FoamFile
{
    format      ascii;
    class       dictionary;
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     simpleFoam;

startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         {{ end_time}};

deltaT          1;

writeControl    timeStep;

writeInterval   {{ write_interval }};

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable yes;

libs ("libatmosphericModels.so");

// ************************************************************************* //


functions
{
    fileUpdate_Solution
    {
        type              timeActivatedFileUpdate;
        libs              (utilityFunctionObjects);
        writeControl      timeStep;
        writeInterval     1;
        fileToUpdate      "$FOAM_CASE/system/fvSchemes";
        timeVsFile
        (
            (-1   "$FOAM_CASE/system/fvSchemes_1")
            (1000 "$FOAM_CASE/system/fvSchemes_2")
        );
    }
    
    towerProfiles
    {
        type            sets;
        libs            (sampling);  // Changed from functionObjectLibs
        enabled         true;
        verbose         true;
        interpolationScheme cellPoint;
        writeControl    writeTime;
        writeInterval   1;
        
        fields
        (
            U k epsilon
        );
        
        sets
        (
            central_tower
            {
                type            uniform;  // Changed from lineCell
                axis            xyz;
                start           ({{easting}} {{northing}} 0);
                end             ({{easting}} {{northing}} 3000);
                nPoints         1000;
            }
            
        );
        
        setFormat       csv;
        setPrecision    6;
    }
}
